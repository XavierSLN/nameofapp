<section class="container">

  <div class="page_content">

	<h2>
	  <strong>Name:</strong>
	  <%= @product.name %>
	</h2>

	<p>
	  <strong>Description:</strong>
	  <%= @product.description %>
	</p>

	<p>
	  <strong>Color:</strong>
	  <%= @product.color %>
	</p>

	<p>
	  <strong>Price (Euros):</strong>
	  <%= @product.price %>
	</p>

	<div>
    <%= image_tag(@product.image_url, class: "product-img-show") %>
  </div>


	<p>
	<%= link_to 'Edit', edit_product_path(@product) %> |
	<%= link_to 'Back', products_path %>
	</p>

	</div>
</section>
