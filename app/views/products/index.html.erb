<!-- products section starts here -->

<div class="container-fluid">

  <h2>Products</h2>

  <div class="row">
    <div class="col-sm-4 col-sm-offset-8 col-md-3 col-md-offset-9">  
      <div class="fright">
        <%= link_to 'New product', new_product_path, class: 'btn btn-default' %>
      </div>
    </div><!-- END col -->
    <br><br>
    <% @products.each do |product| %>
      <div class="col-sm-4 col-md-3">
        <div class="product_box">
          <h3><%= product.name %></h3>
   
          <%= image_tag(product.image_url, class: "img-responsive img_product") %>

          <p><%= product.description %></p>
          <p><%= product.color %></p>
          <p><%= product.price %></p>
          <p>
            <%= link_to 'Show', product %> / 
            <%= link_to 'Edit', edit_product_path(product) %> /
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        </div><!-- END product_box -->
      </div><!-- END col -->
    <% end %>

    </div><!-- END row -->  


  </div>
</div>
