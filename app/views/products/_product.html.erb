<div class="col-sm-4 col-md-3">
	<div class="product_box">
  	<h3 class="product_row_1"><%= product.name %></h3>

  	<%= image_tag(product.image_url, class: "img-responsive product-img") %>

  	<p class="product_row_2"><%= truncate(product.description, length: 50) %></p>
  	<p class="product_row_1"><%= product.color %></p>
  	<p class="product_row_1"><%= product.price %></p>
  	<p class="product_row_3">
  	<%= link_to 'Show', product, class:"btn btn-default" %>  
  	<%= link_to 'Edit', edit_product_path(product), class:"btn btn-default" %> 
  	<%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default" %></p>
	</div><!-- END product_box -->
</div><!-- END col -->